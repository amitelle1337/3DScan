<UserControl x:Class="_3DScan.View.Controls.LoadConfigControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_3DScan.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Margin="10">
            <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10">
                <Button Name="btnOpenFile" Click="btnOpenFile_Click" Background="#12130F" BorderBrush="#3891A6">Choose file</Button>
            </WrapPanel>
            <TextBox Name="txtEditor" Height="300" />
            <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Bottom" Margin="0,0,0,10">
                <Button Name="saveConfig" Background="#12130F" BorderBrush="#3891A6">OK</Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>

<UserControl x:Class="_3DScanning.View.Controls.UserControlLiveStream"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_3DScanning.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel x:Name="panel" MinWidth="200" MinHeight="100" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Beige">
        <ToggleButton Style="{DynamicResource MaterialDesignSwitchToggleButton}" Background="#BD8B9C" Click="ToggleButton_Click"
                          VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Canvas Width="200"  Height="50" Background="Aqua">
            <Image x:Name="img" Source="../Resources/cute.jpg" Visibility="Visible" Height="100" Width="100"/>
        </Canvas>
    </StackPanel>
</UserControl>
